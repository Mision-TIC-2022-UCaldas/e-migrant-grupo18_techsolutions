@model E_MigrationTecSolution2021.Models.OfServicio

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>OfServicio</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreDelServicio" class="control-label"></label>
                <input asp-for="NombreDelServicio" class="form-control" />
                <span asp-validation-for="NombreDelServicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaximoNumeroDeMigrantes" class="control-label"></label>
                <input asp-for="MaximoNumeroDeMigrantes" class="form-control" />
                <span asp-validation-for="MaximoNumeroDeMigrantes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaDeInicio" class="control-label"></label>
