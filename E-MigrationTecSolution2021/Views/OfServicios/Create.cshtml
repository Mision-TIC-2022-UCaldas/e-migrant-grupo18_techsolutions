            </div>
            <div class="form-group">
                <label asp-for="FechaDeFinalizacion" class="control-label"></label>
                <input asp-for="FechaDeFinalizacion" class="form-control" />
                <span asp-validation-for="FechaDeFinalizacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstadoServicio" class="control-label"></label>
                <select asp-for="EstadoServicio" class="form-control">
                    <option value="Activos">Activo</option>
                    <option value="Cerrados">Cerrado</option>
                    <option value="ConCupo">Con cupo</option>
                    <option value="SinCupo">Sin Cupo</option>
                </select>
                <span asp-validation-for="EstadoServicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
