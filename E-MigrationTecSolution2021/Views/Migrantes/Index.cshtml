@model IEnumerable<E_MigrationTecSolution2021.Models.Migrante>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Listado de Migrantes Registrados</h1>
<p>
    <a asp-action="Create">Create</a>
</p>
<form asp-action="Index" method="get">
    <div class="form-action-no-color">
        <p>
            Find By name :<input type="text" name="Busqueda" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn-btn-success">
            <a asp-action="Index"> Back to list </a>
        </p>
    </div>

</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pais)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AñoNacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MesNacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiaNacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CorreoElectronico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NTel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DireccionActual)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ciudad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SituacionLaboral)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellidos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pais)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AñoNacimiento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MesNacimiento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaNacimiento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CorreoElectronico)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NTel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DireccionActual)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ciudad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SituacionLaboral)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.NId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.NId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.NId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
